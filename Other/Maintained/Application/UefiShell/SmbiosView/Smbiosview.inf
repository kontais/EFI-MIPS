  SmBiosViewStrings.uni
  QueryTable.c
  EventLogInfo.c
  PrintInfo.c
  LibSmbiosView.c
  smbiosview.c
  smbios.c

[includes.common]
  .
  ../Inc
  ../Library
  $(EDK_SOURCE)/Foundation
  $(EDK_SOURCE)/Foundation/Include
  $(EDK_SOURCE)/Foundation/Include/IndustryStandard
  $(EDK_SOURCE)/Foundation/Efi
  $(EDK_SOURCE)/Foundation/Efi/Include
